generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  saltedHash String
  profile Profile?

  sent Message []
  received Message []
  friends Friends []

}

model Message {
  id Int @id @default(autoincrement())
  from Int @unique
  to Int @unique
  message String
  date DateTime @default(now())
  dltdBySender Boolean @default(false)
  dltdByReciever Boolean @default(false)


  fromUser User @relation(fields: [from], references: [id])
  toUser User @relation(fields: [to], references: [id])
}

model Friends {
  id Int @id @default(autoincrement())
  contactID Int
  email String

  friendID User @relation(fields: [contactID], references: [id])

}

model Profile {
  user Int @unique
  name String
  email String @unique
  updatedPassword String 

  prof User @relation(fields: [user], references:[id])
}
