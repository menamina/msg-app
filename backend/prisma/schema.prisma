generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  saltedHash String
  profile Profile?

  sent Message [] @relation("From")
  received Message [] @relation("To")

}

model Message {
  id Int @id @default(autoincrement())
  from Int 
  to Int
  message String
  date DateTime @default(now())


  fromUser User @relation("From", fields: [from], references: [id])
  toUser User @relation("To", fields: [to], references: [id])
}

model Profile {
  id Int @id @default(autoincrement())
  user Int @unique

  prof User @relation(fields: [user], references:[id])
}
