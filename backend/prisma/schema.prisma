generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  username        String    @unique
  email           String    @unique
  saltedHash      String
  profile         Profile?  @relation("UserProfile")

  sent            Message[] @relation("SentMessages")
  received        Message[] @relation("ReceivedMessages")
  ownerFriends    Friends[] @relation("OwnerFriends")
  contactFriends  Friends[] @relation("ContactFriends")
  sentRequests    FriendReq[] @relation("whoSent")
  receivedRequests FriendReq[] @relation("whoGot")
}

model Message {
  id Int @id @default(autoincrement())
  from Int
  to Int
  message String
  file String?
  date DateTime @default(now())
  dltdBySender Boolean @default(false)
  dltdByReceiver Boolean @default(false)


  fromUser User @relation("SentMessages", fields: [from], references: [id])
  toUser User @relation("ReceivedMessages", fields: [to], references: [id])
}

model Friends {
  id        Int @id @default(autoincrement())
  ownerID   Int
  contactID Int

  owner   User @relation("OwnerFriends", fields: [ownerID], references: [id])
  contact User @relation("ContactFriends", fields: [contactID], references: [id])

  @@unique([ownerID, contactID])
}

model FriendReq {
  id Int @id @default(autoincrement())
  sentBy Int
  sentTo Int
  accepted Boolean @default(false)

  whoSent User @relation("whoSent", fields: [sentBy], references: [id])
  whoGot User @relation("whoGot", fields: [sentTo], references: [id])

  @@unique([sentBy, sentTo])

}

model Profile {
  id     Int @id @default(autoincrement())
  user   Int  @unique
  pfp    String @default("default-avatar.png")

  prof   User @relation("UserProfile", fields: [user], references: [id])
}
